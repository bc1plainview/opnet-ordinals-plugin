# OPNet RPC URL
OPNET_RPC_URL=https://regtest.opnet.org

# Network (mainnet, testnet, or regtest)
NETWORK=regtest

# PostgreSQL database URL
DATABASE_URL=postgresql://localhost/ordinals

# API server port
API_PORT=3002

# Starting block height for indexing
START_HEIGHT=0

# Enable REST API (true/false)
ENABLE_API=true

# --- Bridge Configuration (optional) ---
# Set both BRIDGE_BURN_ADDRESS and BRIDGE_COLLECTION_FILE to enable the bridge.

# Bitcoin address where inscriptions are burned (Satoshi genesis address)
# BRIDGE_BURN_ADDRESS=1A1zP1eP5QGefi2DMPTfTL5SLmv7DivfNa

# Path to the collection JSON file
# BRIDGE_COLLECTION_FILE=./my-collection.json

# Collection display name and symbol
# BRIDGE_COLLECTION_NAME=My Collection
# BRIDGE_COLLECTION_SYMBOL=MC

# Number of block confirmations before a burn is considered final
# BRIDGE_CONFIRMATIONS=6
