{
  "name": "@opnet/ordinals-indexer-plugin",
  "version": "1.0.0",
  "description": "OPNet plugin for indexing Ordinals inscriptions on Bitcoin",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage"
  },
  "keywords": [
    "opnet",
    "ordinals",
    "bitcoin",
    "indexer",
    "plugin"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@btc-vision/bitcoin": "7.0.0-alpha.10",
    "@btc-vision/logger": "latest",
    "@btc-vision/transaction": "1.8.0-beta.9",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "opnet": "1.8.1-beta.6",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.0.0",
    "@types/pg": "^8.10.9",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.6.0"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/index.ts"
    ]
  }
}
